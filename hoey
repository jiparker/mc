
local selectedSlot = 1

local counter = 0

function dropOff()
  turtle.turnLeft()
  
  turtle.select(5)
  turtle.drop()
  turtle.select(6)
  turtle.drop()
  turtle.select(7)
  turtle.drop()
  turtle.select(8)
  turtle.drop()
  
  turtle.turnRight()
end


function getIntoPosition()
	turtle.turnRight()
	turtle.forward()
	turtle.forward()
	turtle.turnLeft()
	turtle.up()
end

function getHome()
	turtle.down()
	turtle.turnLeft()
	turtle.forward()
	turtle.forward()
	turtle.turnRight()
end

-- start
getIntoPosition()

while not turtle.detect() do
	turtle.forward()
	counter=counter + 1
end

for i=1, counter, 1 do
	if turtle.getItemCount(selectedSlot) < 5 then
		selectedSlot = selectedSlot +1
	end
	turtle.select(selectedSlot)
	
	turtle.digDown()
	turtle.suck()
	turtle.down()
	
	print("doing right side")
	turtle.turnRight()
	turtle.dig()
	turtle.suck()
	turtle.place()
	turtle.turnRight()
	turtle.turnRight()
	print("doing first left side")
	turtle.dig() --harvest
	turtle.suck()
	turtle.forward()
	print("doing second left side")
	turtle.dig()
	turtle.suck()
	turtle.place()
	turtle.back()
	turtle.dig()
	turtle.place()
	turtle.turnRight()
	turtle.up()
	turtle.digDown()
	turtle.placeDown()
	turtle.back()

end

getHome()

dropOff()




