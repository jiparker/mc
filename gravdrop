local tArgs, gIterations = {...}, nil

function placeDownSmartly()
  if turtle.getItemCount(currentSlot) = 0
		currentSlot = currentSlot + 1
	end
	turtle.placeDown()
end

function dropIt()
	while not turtle.detectDown() do
  	placeDownSmartly()
	end
end

gIterations = tArgs[1]

currentSlot = 1
	turtle.selectSlot(currentSlot)
	for i=1, gIterations, 1 do
	  while currentSlot != 17 do	
	   	dropIt()
	    turtle.forward()
		end
  end




