http.request("https://gist.githubusercontent.com/anonymous/a9ca6f772ccec223174b/raw/c423d50cc11a70230032be1f5e178c17b7c0056b/test.json")

local requesting = true

while requesting do
  local event, url, sourceText = os.pullEvent()
  
  if event == "http_success" then
    local respondedText = sourceText.readAll()

		obj = json.decode(respondedText)
		play = obj.play
    
    sourceText.close()

		if play == true then
			print("good to go")
		elseif
    	print("can't play right now")
		end
    
    requesting = false
  elseif event == "http_failure" then
    print("Server didn't respond.")
    
    requesting = false
  end
end
